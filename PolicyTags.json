{
"mode": "Indexed",
"parameters": {
      "tagNameProjectName": {
        "type": "String",
        "metadata": {
          "displayName": "ProjectName",
          "description": "ProjectName"
        },
		"defaultValue": "ProjectName"
      },
      "tagNameOwner": {
        "type": "String",
        "metadata": {
          "displayName": "Owner",
          "description": "Owner"
        },
		"defaultValue": "Owner"
      },
      "tagNameEnvType": {
        "type": "String",
        "metadata": {
          "displayName": "EnvType",
          "description": "EnvType"
        },
		"defaultValue": "EnvType"
     },
		"tagNameProjectValue": {
        "type": "String",
        "metadata": {
          "displayName": "ProjectNameValue",
          "description": "ProjectNameValue"
        },
		"defaultValue": "ProjectNameValue"
      },
     "tagNameOwnerValue": {
        "type": "String",
        "metadata": {
          "displayName": "OwnerValue",
          "description": "OwnerValue"
        },
		"defaultValue": "OwnerValue"
      },
      "tagNameEnvTypeValue": {
        "type": "String",
        "metadata": {
          "displayName": "EnvTypeValue",
          "description": "EnvTypeValue"
        },
		"defaultValue": "EnvTypeValue"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "[concat('tags[', parameters('tagNameProjectName'), ']')]",
            "exists": "false"
          },
          {
            "value": "[resourceGroup().tags[parameters('tagNameProjectValue')]]",
            "notEquals": ""
          },
          {
            "field": "[concat('tags[', parameters('tagNameOwner'), ']')]",
            "exists": "false"
          },
          {
            "value": "[resourceGroup().tags[parameters('tagNameOwnerValue')]]",
            "notEquals": ""
          },
          {
            "field": "[concat('tags[', parameters('tagNameEnvType'), ']')]",
            "exists": "false"
          },
          {
            "value": "[resourceGroup().tags[parameters('tagNameEnvTypeValue')]]",
            "notEquals": ""
          }
        ]
      },
      "then": {
        "effect": "append",
        "details": [
          {
            "field": "[concat('tags[', parameters('tagNameProjectName'), ']')]",
            "value": "[resourceGroup().tags[parameters('tagNameProjectValue')]]"
          },
          {
            "field": "[concat('tags[', parameters('tagNameOwner'), ']')]",
            "value": "[resourceGroup().tags[parameters('tagNameOwnerValue')]]"
          },
          {
            "field": "[concat('tags[', parameters('tagNameEnvType'), ']')]",
            "value": "[resourceGroup().tags[parameters('tagNameEnvTypeValue')]]"
          }
        ]
      }
    }
}
